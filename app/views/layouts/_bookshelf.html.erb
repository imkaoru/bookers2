<div class="bookshelf">
  <h2>Books</h2>
  
  <table class="table">
    <thead>
      <tr>
        <th style="width: 10%"></th>
        <th style="width: 30%">Title</th>
        <th style="width: 60%">Opinion</th>
      </tr>
    </thead>
    
    <tbody>
      <% books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user_id) do %>
              <%= image_tag book.user.get_image(80,80) %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>