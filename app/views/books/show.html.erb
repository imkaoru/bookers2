<% if flash[:notice] %>
  <p id = "notice"><%= flash[:notice] %></p>
<% end %>

<div class="container pt-4 px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: 'layouts/side', locals: { user: @user, new_book: @new_book } %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <div class="book_detail">
        <h2>Book detail</h2>
        
        <table class="table">
          <tbody>
            <tr>
              <td style="width: 15%">
                <%= link_to user_path(@user.id) do %>
                  <%= image_tag @user.get_image(100,100) %><br>
                  <%= @user.name %>
                <% end %>
              </td>
              <td style="width: 20%">
                <%= link_to book_path(@book.id) do %>
                  <%= @book.title %>
                <% end %>
              </td>
              
              <% if @user == current_user %>
                <td style="width: 45%"><%= @book.body %></td>
                <td style="width: 10%"><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
                <td style="width: 10%"><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか?", class: "btn btn-sm btn-danger" %></td>
              <% else %>
                <td style="width: 65%"><%= @book.body %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>